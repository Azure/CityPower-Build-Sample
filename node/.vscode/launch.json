    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "name": "API",
            "program": "${workspaceRoot}/api/server/server.js",
            "cwd": "${workspaceRoot}",
            "env": {
                "DB_HOST": "",
                "DB_PORT": "",
                "DB_DATABASE": "citypower",
                "DB_USER": "",
                "DB_PASSWORD": "",
                "DB_SSL": "false"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Web",
            "program": "${workspaceRoot}/web/app.js",
            "cwd": "${workspaceRoot}",
            "env": {
                "API_URL": "http://127.0.0.1:3001/api"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ],
    "compounds": [{
        "name": "Compound Web/API",
        "configurations": [
            "Web",
            "API"
        ]
    }]
}