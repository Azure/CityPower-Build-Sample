    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "API",
            "program": "${workspaceRoot}/api/server/server.js",
            "cwd": "${workspaceRoot}",
            "env": {
                "DB_HOST": "",
                "DB_PORT": "",
                "DB_DATABASE": "",
                "DB_USER": "",
                "DB_PASSWORD": "",
                "DB_SSL": ""
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Web",
            "program": "${workspaceRoot}/web/app.js",
            "cwd": "${workspaceRoot}",
            "env": {
                "API_URL": ""
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ],
    "compounds": [
        {
            "name": "Compound Web/API",
            "configurations": [
                "Web",
                "API"
            ]
        }
    ]
}
